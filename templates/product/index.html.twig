{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h1>Filtrer</h1>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h1>Nos Produits</h1>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="product-item text-center">
                            <a href="{{ path('product',{'slug': product.slug}) }}"><img
                                        src="/uploads/{{ product.illustration }}" alt="{{ product.name }}"
                                        class="img-fluid"></a>
                            <h5>{{ product.name }}</h5>
                            <span class="product_subtitle">{{ product.subtitle }}</span>
                            <span class="product-price">{{ product.price /100|number_format(2,'.',',') }} â‚¬</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
